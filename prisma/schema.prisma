// Prisma Schema for Korean Clinic Advisor

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 사용자
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  image         String?   // NextAuth PrismaAdapter가 사용하는 필드
  avatar        String?   // 우리가 사용하는 필드 (image와 동기화)
  emailVerified DateTime?
  provider      String    @default("unknown") // google, kakao, email
  providerId    String?
  role          String    @default("user") // user, admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  reviews       Review[]
  favorites     Favorite[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

// NextAuth 계정
model Account {
  id                      String  @id @default(uuid())
  userId                  String
  type                    String
  provider                String
  providerAccountId       String
  refresh_token           String? @db.Text
  access_token            String? @db.Text
  expires_at              Int?
  token_type              String?
  scope                   String?
  id_token                String? @db.Text
  session_state           String?
  refresh_token_expires_in Int?   // Kakao OAuth용 필드 (refresh_token 만료 시간)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth 세션
model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth 인증 토큰
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// 클리닉
model Clinic {
  id            String   @id @default(uuid())
  name          String
  nameEn        String?
  nameZh        String?
  nameJa        String?
  address       String
  addressEn     String?
  addressZh     String?
  addressJa     String?
  latitude      Decimal? @db.Decimal(10, 8)
  longitude     Decimal? @db.Decimal(11, 8)
  phone         String?
  website       String?
  operatingHours Json?   // { monday: "09:00-18:00", ... }
  description   String?  @db.Text
  descriptionEn String?  @db.Text
  descriptionZh String?  @db.Text
  descriptionJa String?  @db.Text
  region        String   // 강남, 청담, 압구정 등
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  images        ClinicImage[]
  clinicTreatments ClinicTreatment[]
  reviews       Review[]
  favorites     Favorite[]
  promotions    Promotion[]

  @@index([region])
  @@index([latitude, longitude])
  @@map("clinics")
}

// 클리닉 이미지
model ClinicImage {
  id        String   @id @default(uuid())
  clinicId  String
  url       String
  type      String   // main, interior, exterior
  order     Int      @default(0)
  createdAt DateTime @default(now())

  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@index([clinicId])
  @@map("clinic_images")
}

// 시술 종류
model Treatment {
  id          String   @id @default(uuid())
  name        String
  nameEn      String?
  nameZh      String?
  nameJa      String?
  category    String   // laser, injectable, skincare, other
  description String?  @db.Text
  descriptionEn String? @db.Text
  descriptionZh String? @db.Text
  descriptionJa String? @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  clinicTreatments ClinicTreatment[]
  reviews          Review[]

  @@index([category])
  @@map("treatments")
}

// 클리닉별 시술 가격
model ClinicTreatment {
  id          String   @id @default(uuid())
  clinicId    String
  treatmentId String
  price       Decimal  @db.Decimal(12, 2)
  currency    String   @default("KRW") // KRW, USD
  duration    Int?     // 분 단위
  description String?  @db.Text
  descriptionEn String? @db.Text
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  clinic    Clinic    @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  treatment Treatment @relation(fields: [treatmentId], references: [id], onDelete: Cascade)

  @@unique([clinicId, treatmentId])
  @@index([clinicId])
  @@index([treatmentId])
  @@map("clinic_treatments")
}

// 리뷰
model Review {
  id           String   @id @default(uuid())
  userId       String
  clinicId     String
  treatmentId  String?
  rating       Int      // 1-5
  content      String   @db.Text
  visitDate    DateTime?
  isVerified   Boolean  @default(false)
  helpfulCount Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  clinic      Clinic       @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  treatment   Treatment?   @relation(fields: [treatmentId], references: [id], onDelete: SetNull)
  images      ReviewImage[]
  helpfulUsers ReviewHelpful[]

  @@index([clinicId])
  @@index([userId])
  @@index([treatmentId])
  @@index([rating])
  @@index([createdAt])
  @@map("reviews")
}

// 리뷰 이미지
model ReviewImage {
  id        String   @id @default(uuid())
  reviewId  String
  url       String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@index([reviewId])
  @@map("review_images")
}

// 리뷰 도움됨
model ReviewHelpful {
  id        String   @id @default(uuid())
  reviewId  String
  userId    String
  createdAt DateTime @default(now())

  review Review @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@unique([reviewId, userId])
  @@index([reviewId])
  @@index([userId])
  @@map("review_helpful")
}

// 즐겨찾기
model Favorite {
  id        String   @id @default(uuid())
  userId    String
  clinicId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@unique([userId, clinicId])
  @@index([userId])
  @@index([clinicId])
  @@map("favorites")
}

// 프로모션
model Promotion {
  id           String   @id @default(uuid())
  clinicId     String
  title        String
  titleEn      String?
  titleZh      String?
  titleJa      String?
  description  String?  @db.Text
  descriptionEn String? @db.Text
  descriptionZh String? @db.Text
  descriptionJa String? @db.Text
  discountRate Int?     // 할인율 (%)
  discountAmount Decimal? @db.Decimal(12, 2) // 할인 금액
  startDate    DateTime
  endDate      DateTime
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@index([clinicId])
  @@index([startDate, endDate])
  @@index([isActive])
  @@map("promotions")
}

